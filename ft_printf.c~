#include "libft.h"

int ft_printf(const char *format, ...)
{
    char *s;
    char *var1;
	size_t i;
	size_t	j;
	va_list ap;

	va_start(ap, format);
	var1 = va_arg(ap, char*);
	va_end(ap);
    s = NULL;
    if (!(s = (char*)malloc(ft_strlen(format) + ft_strlen(var1) + 1)))
        return (0);
	j = 0;
	i = 0;
	while (j < ft_strlen(format) + ft_strlen(var1))
	{
		if (format[i] != '%')
		{
			s[j] = format[i];
			i++;
			j++;
		}
		else
		{
			while (j < i + ft_strlen(var1))
			{
				s[j] = var1[j - i];
				j++;
			}
			i++;
		}
	}
	s[j] = '\0';
	ft_putstr(s);
	return (0);
}
