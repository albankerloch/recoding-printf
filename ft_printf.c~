#include "libft.h"

int ft_printf(const char *format, const char *var1)
{
    char *s;
	size_t i;
	size_t	j;

    s = NULL;
    if (!(s = (char*)malloc(ft_strlen(format) + ft_strlen(var1) + 1)))
        return (s);
	j = 0;
	i = 0;
	while (j < ft_strlen(format) + ft_strlen(var1))
	{
		if (format[t] != '%')
		{
			s[j] = format[i];
			i++;
			j++;
		}
		else
		{
			while (j < i + ft_strlen(var1))
			{
				s[j] = var1[i - j];
				j++;
			}
	}
	s[j] = '\0';
	return (0);
}
